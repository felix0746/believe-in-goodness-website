rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 預設規則：
    // 1. 允許任何人讀取任何文件 (讓 impact.html 等公開頁面可以顯示資料)
    // 2. 只允許經過驗證 (已登入) 的使用者寫入任何文件 (讓 admin.html 可以更新資料)
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}