rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 允許公開讀取影響力數據
    match /impact/{document} {
      allow read: if true;  // 任何人都可以讀取
      allow write: if request.auth != null;  // 只有已驗證的使用者可以寫入
    }
    
    // 其他集合的預設規則
    match /{document=**} {
      allow read: if true;  // 允許公開讀取所有文件
      allow write: if false; // 預設拒絕所有寫入操作
    }
  }
} 